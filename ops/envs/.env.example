# .env.example
# This is a template file for environment variables
# Copy this file to .env and fill in your values
#
# For specific environments, see:
#   - envs/.env.local       (local development)
#   - envs/.env.staging     (staging environment)
#   - envs/.env.production  (production environment)

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment name: development | staging | production
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# =============================================================================
# PORTS (External Access)
# =============================================================================
API_PORT=8000
MLFLOW_PORT=5000
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090
REDPANDA_PORT=9092
REDPANDA_CONSOLE_PORT=8081
POSTGRES_PORT=5433
REDIS_PORT=6379

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL Configuration
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=mlflow
DATABASE_HOST=mlflow-db
DATABASE_PORT=5432

# =============================================================================
# CACHE
# =============================================================================

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_MEMORY=256mb

# =============================================================================
# MLFLOW
# =============================================================================

MLFLOW_TRACKING_URI=http://mlflow-server:5000
MLFLOW_EXPERIMENT_NAME=default
MLFLOW_ARTIFACT_ROOT=s3://your-bucket/artifacts

# =============================================================================
# CLOUD PROVIDERS
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# MinIO Configuration (Local S3)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MLFLOW_S3_ENDPOINT_URL=http://mlflow-minio:9000
MLFLOW_S3_IGNORE_TLS=true

# GCP Configuration
GCP_PROJECT=
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=

# =============================================================================
# API SERVICE
# =============================================================================

API_HOST=0.0.0.0
API_WORKERS=2
API_RELOAD=false
CORS_ORIGINS=*

# Model Configuration
MODEL_CACHE_SIZE=5
FEATURE_CACHE_TTL=3600
PRELOAD_MODELS=
MODEL_AUTO_UPDATE=true
MODEL_UPDATE_INTERVAL=60
MODEL_CACHE_DIR=/model_cache

# =============================================================================
# MESSAGE BROKER
# =============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =============================================================================
# MONITORING
# =============================================================================

GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_ROOT_URL=http://localhost:3001

# =============================================================================
# PROCESSING
# =============================================================================

BEAM_RUNNER=DirectRunner
PYTHONPATH=/app