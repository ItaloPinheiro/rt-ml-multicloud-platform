    {
      "type": "stat",
      "title": "API Uptime (24h%)",
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 6,
        "h": 6
      },
      "targets": [
        {
          "expr": "avg_over_time(up{job=\"ml-pipeline-api-service\"}[24h]) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "orange",
                "value": 90
              },
              {
                "color": "green",
                "value": 99
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "API Time Since Boot",
      "gridPos": {
        "x": 6,
        "y": 6,
        "w": 6,
        "h": 6
      },
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=\"ml-pipeline-api-service\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 36,
  "timezone": "browser",
  "refresh": "1m"
