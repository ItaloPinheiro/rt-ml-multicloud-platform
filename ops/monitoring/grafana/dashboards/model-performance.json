{
  "uid": "model-performance",
  "title": "1. Model Performance",
  "panels": [
    {
      "type": "timeseries",
      "title": "Prediction Throughput",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(ml_predictions_total[5m]))",
          "legendFormat": "requests/sec",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 10
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Prediction Latency",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(ml_prediction_duration_seconds_bucket[5m]))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(ml_prediction_duration_seconds_bucket[5m]))",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(ml_prediction_duration_seconds_bucket[5m]))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 10
          }
        },
        "overrides": []
      }
    },
    {
      "type": "piechart",
      "title": "Success vs Error",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum(rate(ml_predictions_total{status=\"success\"}[5m]))",
          "legendFormat": "Success"
        },
        {
          "expr": "sum(rate(ml_predictions_total{status=\"error\"}[5m]))",
          "legendFormat": "Error"
        }
      ],
      "options": {
        "pieType": "pie",
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    },
    {
      "type": "stat",
      "title": "Models Loaded",
      "gridPos": {
        "x": 8,
        "y": 8,
        "w": 6,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(ml_model_loads_total)",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 36,
  "timezone": "browser",
  "refresh": "1m"
}