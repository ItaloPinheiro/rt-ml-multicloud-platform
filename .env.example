# =============================================================================
# ML Pipeline Platform Environment Configuration
# =============================================================================

# ----------------------------------------------------------------------------
# MLflow Configuration
# ----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow:mlflow123@localhost:5433/mlflow
MLFLOW_ARTIFACT_ROOT=s3://mlflow
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# ----------------------------------------------------------------------------
# Redis Configuration (Feature Store)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow123
POSTGRES_DB=mlflow
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# ----------------------------------------------------------------------------
# MinIO Configuration (S3-compatible storage)
# ----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost:9000

# ----------------------------------------------------------------------------
# GCP Configuration
# ----------------------------------------------------------------------------
GCP_PROJECT=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Pub/Sub Configuration
PUBSUB_SUBSCRIPTION=ml-pipeline-subscription
PUBSUB_TOPIC=ml-pipeline-topic

# BigQuery Configuration
BQ_DATASET=ml_pipeline
BQ_LOCATION=US

# ----------------------------------------------------------------------------
# AWS Configuration
# ----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Kinesis Configuration
KINESIS_STREAM_NAME=ml-pipeline-stream

# ----------------------------------------------------------------------------
# Kafka Configuration
# ----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=ml-pipeline-events
KAFKA_GROUP_ID=ml-pipeline-consumer

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_DEBUG=false

# ----------------------------------------------------------------------------
# Monitoring Configuration
# ----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin123

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
ENVIRONMENT=development
FEATURE_STORE_TTL=3600
MODEL_CACHE_SIZE=10

# ----------------------------------------------------------------------------
# Apache Beam Configuration
# ----------------------------------------------------------------------------
BEAM_RUNNER=DirectRunner
BEAM_PROJECT=${GCP_PROJECT}
BEAM_REGION=${GCP_REGION}
BEAM_TEMP_LOCATION=gs://your-temp-bucket/temp
BEAM_STAGING_LOCATION=gs://your-temp-bucket/staging

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------
SECRET_KEY=your-super-secret-key-change-in-production
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]